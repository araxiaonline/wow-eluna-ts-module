{  
  "compilerOptions": {
    "strict": true,
    "target": "esnext",    
    "noImplicitAny": true,    
    "preserveConstEnums": true,    
    "moduleResolution": "node",
    "outDir": "dist",
    "skipDefaultLibCheck": true,
    "lib": [
      "esnext","DOM"
    ],        
    "types": [      
      "lua-types/5.2",
      "jest"      
    ],
    "typeRoots": [
      "./types",     
      "./node_modules/@types",
      "./node_modules"    
    ],
    "rootDir": "modules"
  },
  "include": [    
    "modules/**/*.ts",
    "types/**/*.d.ts"
  ]
}